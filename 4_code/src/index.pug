doctype html
html
	head
	body
		div.modal.modal__address.address
			.modal__header
				button.modal__close.close Close
				.modal__title
					h1 Address
					p.address__current.none None found for this lead.
			.modal__content
				button.modal__action.button.button__large.button__color(data-action="add-new") Add New
				form.form.form--nojs.modal__form
					.form__row
						select.form__select.address__tags
							option.form__select__option(value='business' data-color='#015F9B' selected) Business
							option.form__select__option(value='mailing' data-color='#DA00F8') Mailing
							option.form__select__option(value='other') Other
					.form__row
						textarea#address.address__textarea(autofocus placeholder="Enter your address...")
					fieldset.form__address
						.form__row
							input(type="text" placeholder="Address")
							input(type="text" placeholder="Address (cont.)")
						.form__row
							input(type="text" placeholder="City")
							input(type="text" placeholder="State")
						.form__row
							input(type="text" placeholder="Postal Code")
						.form__row
					.form__submit
						input.button.button__large.button__color(type="submit" value="Save")
				.modal__cancel
					button(data-action="cancel-add-new") Cancel